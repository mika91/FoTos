                    <RowDefinition Height="1*" />
                    <RowDefinition Height="8*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Viewbox Opacity="0.3" Grid.Row="1" Grid.Column="1">
                    <Canvas Width="24" Height="24">
                        <Path Data="M1.2,4.47L2.5,3.2L20,20.72L18.73,22L16.73,20H4A2,2 0 0,1 2,18V6C2,5.78 2.04,5.57 2.1,5.37L1.2,4.47M7,4L9,2H15L17,4H20A2,2 0 0,1 22,6V18C22,18.6 21.74,19.13 21.32,19.5L16.33,14.5C16.76,13.77 17,12.91 17,12A5,5 0 0,0 12,7C11.09,7 10.23,7.24 9.5,7.67L5.82,4H7M7,12A5,5 0 0,0 12,17C12.5,17 13.03,16.92 13.5,16.77L11.72,15C10.29,14.85 9.15,13.71 9,12.28L7.23,10.5C7.08,10.97 7,11.5 7,12M12,9A3,3 0 0,1 15,12C15,12.35 14.94,12.69 14.83,13L11,9.17C11.31,9.06 11.65,9 12,9Z" Fill="Black" />
                    </Canvas>
                </Viewbox>

            </Grid>-->
            <!--- live view image -->
            <Image x:Name="LiveViewImage" RenderTransformOrigin="0.5,0.5" Visibility="Visible">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="-1"/>
                </Image.RenderTransform>
            </Image>
        </Grid>

        <!-- countdown -->
        <Grid x:Name="CountdownGrid" Grid.Column="2" Grid.Row="1">
            <Border>
                <Border.RenderTransformOrigin>0.5, 0.5</Border.RenderTransformOrigin>
                <Border.RenderTransform>
                    <ScaleTransform x:Name="MyAnimatedScaleTransform" />
                </Border.RenderTransform>
                <Viewbox>
                    <TextBlock Name="TextCountdown" Text="3" FontFamily="Segoe UI" >
                        <TextBlock.Foreground>
                            <SolidColorBrush x:Name="myTextColor" Color="DarkOrchid" />
                        </TextBlock.Foreground>
                        <TextBlock.Effect>
                            <DropShadowEffect
                                ShadowDepth="0.2"
                                Direction="330"
                                Color="Black"
                                Opacity="1"
                                BlurRadius="0"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Viewbox>
            </Border>
        </Grid>

        <!-- smile -->
        <Grid x:Name="SmileGrid" Grid.Column="2" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
                <Image Source="../resources/icons/picto-sourire.png" Grid.Row="1" Grid.Column="1"></Image>
            <Viewbox  Grid.Row="2" Grid.Column="1">
                    <TextBlock Text="Smile !" FontFamily="Segoe UI Black" />
                </Viewbox>
        </Grid>

        <StackPanel x:Name="panelTakePicture" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center">
            
