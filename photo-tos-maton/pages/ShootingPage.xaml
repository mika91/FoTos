                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>-->

            <!-- Button 'Take Picture'-->
            <Viewbox  Grid.Row="1" MouseUp="ButtonTakePicture_Click" Stretch="Fill" Style="{StaticResource ViewBoxButtonStyle}">
