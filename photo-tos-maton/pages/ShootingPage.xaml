                </Canvas>
            </Viewbox>

            <Viewbox Grid.Row="2" VerticalAlignment="Top" Style="{StaticResource BouncingUpStyle}">
                <Viewbox.RenderTransform>
                    <TranslateTransform Y="-30"></TranslateTransform>
