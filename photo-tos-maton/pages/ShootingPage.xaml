                </Canvas>
            </Viewbox>
            <Viewbox Grid.Column="1" Grid.Row="0" Style="{StaticResource BouncingUpStyle}">
                <Canvas Width="24" Height="24">
                    <Path Data="M13,20H11V8L5.5,13.5L4.08,12.08L12,4.16L19.92,12.08L18.5,13.5L13,8V20Z" Fill="Black" />
                </Canvas>
            </Viewbox>
            <Viewbox Grid.Column="2" Grid.Row="0" Style="{StaticResource BouncingUpStyle}">
