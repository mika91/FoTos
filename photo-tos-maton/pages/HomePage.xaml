<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:user_controls="clr-namespace:photo_tos_maton.user_controls" x:Class="photo_tos_maton.pages.HomePage"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../resources/wallpapers/wallpaper00.jpg" Opacity="0.7" Stretch="Fill"/>
        </Grid.Background>

        <user_controls:SlideShowControl x:Name="slideShowControl" Margin="100,100,100,100"></user_controls:SlideShowControl>
        <Button x:Name="button" Click="Button_Click" Opacity="0"/>
    </Grid>
</UserControl>
